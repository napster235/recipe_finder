<%= render partial: 'recipe_header', locals: { show_search_bar: true } %>

<div class="container">
  <div class="row">
    <% if @recipes.blank? %>
      <h4>No recipes found</h4>
    <% else %>
      <% @recipes.each do |recipe| %>
        <div class="col-md-3 d-flex align-items-center flex-column mb-4">
          <%= link_to(recipe) do %>
            <% if recipe.image %>
              <%= image_tag(recipe.image,
                            alt: recipe.title,
                            class: "img-thumbnail bg-secondary border-0 rounded-bottom-0",
                            style: "width: 250px; height:250px; ")
              %>
            <% end %>
          <% end %>
          <div class="row w-100">
            <div class="p-3 mb-2 rounded bg-secondary text-white" >
              <h5 class="text-warning text-center"><%= recipe.title %> </h5>

              <%= render partial: 'recipe_details', locals: { recipe: recipe } %>

              <div class="text-white d-flex w-100 mt-3">
                <%= link_to(recipe) do %>
                  <div class="d-flex w-100">
                    <div class="fw-bold text-white">Show recipe</div>
                    <i class="bi bi-arrow-up-right text-warning mx-2"></i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row mx-auto w-100">
        <%= paginate @recipes %>
      </div>
    <% end %>
  </div>
</div>
